@model IEnumerable<HRMSystem.Context.EmployeeTable>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employee</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
